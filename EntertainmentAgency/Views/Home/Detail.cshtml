@{
    ViewData["Title"] = "Entertainer Details";
}

@model Entertainer

<h2>@Model.EntStageName</h2>
<a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@Model.EntertainerID">Edit</a>
<a class="btn btn-info" asp-controller="Home" asp-action="EntertainerList">Back To List</a>
<a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@Model.EntertainerID">Delete</a>
<h3>ID: @Model.EntertainerID</h3>
<h3>SSN: @Model.EntSSN</h3>
<h3>Street Address: @Model.EntStreetAddress</h3>
<h3>City: @Model.EntCity</h3>
<h3>State: @Model.EntState</h3>
<h3>ZIP: @Model.EntZipCode</h3>
<h3>Phone: @Model.EntPhoneNumber</h3>
@if (Model.EntWebPage is not null)
{
    <h3>Web Page: @Model.EntWebPage</h3>
}
@if (Model.EntEMailAddress is not null)
{
    <h3>Email: @Model.EntEMailAddress</h3>
}
<h3>Date Entered: @Model.DateEntered</h3>