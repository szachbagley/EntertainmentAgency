@{
    ViewData["Title"] = "Entertainer Details";
}

@model Entertainer
<h1>Add/Edit Entertainer</h1>
<form method="post">
    <input type="hidden" asp-for="EntertainerID" />
    <label asp-for="EntStageName">Stage Name:</label>
    <br />
    <input asp-for="EntStageName" required />
    <br />
    <br />
    <label asp-for="EntSSN">SSN:</label>
    <br />
    <input asp-for="EntSSN" />
    <br />
    <br />
    <label asp-for="EntStreetAddress">Street Address:</label>
    <br />
    <input asp-for="EntStreetAddress" required />
    <br />
    <br />
    <label asp-for="EntCity">City:</label>
    <br />
    <input asp-for="EntCity" required />
    <br />
    <br />
    <label asp-for="EntState">State:</label>
    <br />
    <input asp-for="EntState" required />
    <br />
    <br />
    <label asp-for="EntZipCode">ZIP:</label>
    <br />
    <input asp-for="EntZipCode" required int />
    <br />
    <br />
    <label asp-for="EntPhoneNumber">Phone:</label>
    <br />
    <input asp-for="EntPhoneNumber" required />
    <br />
    <br />
    <label asp-for="EntWebPage">Web Page:</label>
    <br />
    <input asp-for="EntWebPage" />
    <br />
    <br />
    <label asp-for="EntEMailAddress">Email:</label>
    <br />
    <input asp-for="EntEMailAddress" />
    <br />
    <br />
    @if (Model.DateEntered is not null)
    {
        <input type="hidden" asp-for="DateEntered" />
    }

    <button type="submit" class="btn btn-info">Submit</button>

    <div asp-validation-summary="All"></div>
</form>